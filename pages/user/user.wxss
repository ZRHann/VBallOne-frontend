.container {
  padding: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role {
  color: #666;
  font-size: 28rpx;
}

.logout-btn {
  margin-top: 60rpx;
  width: 60%;
}

.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.login-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.tips {
  color: #666;
  font-size: 32rpx;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 70%;
}