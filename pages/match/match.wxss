.container {
  position: relative;
}

.fixed-search {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 搜索框样式 */
.search-bar {
  display: flex;
  align-items: center;
  width: 95%;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-bar input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 无结果提示 */
.no-result {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.clear-icon{
  position: absolute;
  right: 110rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.icon-img {
  width: 100%;
  height: 100%;
}

/* 比赛列表（可滚动区域） */
.match-list {
  overflow-y: auto; /* 允许垂直滚动 */
}

.match-card {
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: #f9f9f9;
  position: relative; 
  padding: 30rpx 120rpx 30rpx 30rpx; 
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 固定在底部的按钮组 */
.fixed-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff; /* 背景色（可选） */
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1); /* 顶部阴影（可选） */
  z-index: 999rpx;
}

/* 按钮样式 */
.fixed-buttons button {
  flex: 1;
  margin: 0 10rpx;
}

.match-card:active {
  background: #f5f5f5;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}
.info {
  font-size: 28rpx;
  color: #666;
}

/* 状态角标容器 */
.status-badge {
  position: absolute;
  top: -12rpx;    /* 向上偏移一半高度 */
  right: -12rpx;   /* 向右偏移一半宽度 */
  padding: 8rpx 24rpx;
  border-radius: 20rpx 20rpx 20rpx 4rpx; /* 特殊形状 */
  transform: rotate(2deg); /* 微倾斜增加设计感 */
}

/* 状态文字样式 */
.status-text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 不同状态的颜色方案 */
.status-tag.NOT_STARTED {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffd591;
}

.status-tag.IN_PROGRESS {
  background: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
}

.status-badge.FINISHED {
  background: #fff1f0;
  color: #cf1322;
  border: 2rpx solid #ffa39e;
}

/* 添加小三角装饰 */
.status-badge::after {
  content: '';
  position: absolute;
  right: -8rpx;
  bottom: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background: inherit;
  transform: rotate(45deg);
  z-index: -1;
  border-right: 2rpx solid inherit;
  border-bottom: 2rpx solid inherit;
}
