/* pages/scoreSheet/scoreSheet.wxss */
.container {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.button-group {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 10rpx;
}

.btn {
  background-color: #07C160;
  color: white;
  border-radius: 8rpx;
  width: 45%;
  font-size: 18px;
  padding: 10rpx 0;
  margin-bottom: 30rpx;
}