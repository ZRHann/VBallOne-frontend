.container {
  padding: 20rpx;
}
.match-card {
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: #f9f9f9;
  position: relative; 
  padding: 30rpx 120rpx 30rpx 30rpx; 
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.match-card:active {
  background: #f5f5f5;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}
.info {
  font-size: 28rpx;
  color: #666;
}

/* 状态角标容器 */
.status-badge {
  position: absolute;
  top: -12rpx;    /* 向上偏移一半高度 */
  right: -12rpx;   /* 向右偏移一半宽度 */
  padding: 8rpx 24rpx;
  border-radius: 20rpx 20rpx 20rpx 4rpx; /* 特殊形状 */
  transform: rotate(2deg); /* 微倾斜增加设计感 */
  z-index: 2;
}

/* 状态文字样式 */
.status-text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 不同状态的颜色方案 */
.status-tag.pending {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffd591;
}

.status-tag.ongoing {
  background: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
}

.status-badge.completed {
  background: #fff1f0;
  color: #cf1322;
  border: 2rpx solid #ffa39e;
}

/* 添加小三角装饰 */
.status-badge::after {
  content: '';
  position: absolute;
  right: -8rpx;
  bottom: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background: inherit;
  transform: rotate(45deg);
  z-index: -1;
  border-right: 2rpx solid inherit;
  border-bottom: 2rpx solid inherit;
}
