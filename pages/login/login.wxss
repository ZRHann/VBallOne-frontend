/* 游客模式样式 */
.guest-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.divider {
  color: #ccc;
  margin: 30rpx 0;
}

.guest-btn {
  color: #07c160; /* 微信绿 */
  border: none;
  font-size: 32rpx;
}

.guest-btn::after {
  border: none; /* 去除按钮默认边框 */
}

.register-section {
  margin-top: 60rpx;
  text-align: center;
}

.register-link {
  color: #07c160;
  font-size: 28rpx;
}