/* 强制横屏全屏 */
page {
  background: #ffffff;
  width: 100vw !important;
  height: 100vh !important;
}

/* 容器布局 */
.container {
  display: flex;
  flex-direction: row; /* 横向布局 */
  width: 100vw;
  height: 100vh;
}

/* 返回按钮样式 */
.back-btn {
  position: fixed;
  top: 10rpx;
  left: 10rpx;
  z-index: 999;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(65, 64, 64, 0.288);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn .icon {
  font-size: 33rpx;
  color: white;
  transform: translateY(0rpx);
}

/* 左侧队伍样式 */
.left-team {
  flex: 1;
  background: linear-gradient(135deg, #ff4b4b, #ff7676);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 右侧队伍样式 */
.right-team {
  flex: 1;
  background: linear-gradient(135deg, #4b6cff, #76b9ff);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 分数显示样式 */
.score {
  font-size: 249rpx;
  color: white;
  text-shadow: 0rpx 0rpx rgba(0,0,0,0.3);
}

.team-name {
  font-size: 48rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 40rpx;
}

/* 工具栏容器 */
.toolbar {
  position: fixed;
  top: 35rpx;
  right: 0;
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.9);
  border-radius: 40rpx 40rpx;
  box-shadow: -4rpx 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  z-index: 999;
}

/* 展开状态 */
.toolbar.expanded {
  transform: translateX(0);
}

/* 默认收起状态 */
.toolbar:not(.expanded) {
  transform: translateX(88%);
}

/* 触发按钮 */
.toggle-btn {
  width: 33rpx;
  height: 33rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff4b4b;
  border-radius: 50%;
  margin-left: 0rpx;
}

.toggle-btn .icon {
  color: white;
  font-size: 25rpx;
}

/* 功能按钮区域 */
.toolbar-buttons {
  display: flex;
  padding: 0rpx;
  width: 250px;
  margin: 4px;
  opacity: 0;
  transition: opacity 0.2s;
}

.toolbar.expanded .toolbar-buttons {
  opacity: 1;
}

.toolbar-btn {
  margin: 0 10rpx;
  padding: 1rpx 10rpx;
  font-size: 18rpx;
  border-radius: 40rpx;
  background: rgba(255,255,255,0.9);
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

/* 阻止事件穿透 */
.prevent {
  pointer-events: none;
}

/* 取消按钮 */
.cancel-btn {
  margin-top: 20rpx;
  text-align: center;
  color: #666;
  font-size: 20rpx;
  padding: 0rpx;
  border-top: 0rpx solid #eee;
}

/* 队伍选择浮层 */
.team-select-layer {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  z-index: 1000;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

.team-buttons {
  display: flex;
  justify-content: space-between;
}

.team-btn {
  width: 45%;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.team-a {
  background: #FF5722;
  color: white;
}

.team-b {
  background: #2196F3;
  color: white;
}

/* 灰幕样式 */
.pause-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 倒计时文字 */
.countdown-text {
  color: white;
  font-size: 100rpx;
  font-weight: bold;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 45rpx;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 50%;
  opacity: 0.9;
  transition: transform 0.3s;
}

/* 按钮点击效果 */
.close-btn:active {
  transform: scale(0.9);
  opacity: 1;
}

/* 暂停蒙层新增样式 */
.team-tag {
  position: absolute;
  top: 18%;
  font-size: 48rpx;
  color: white;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

.team-tag.A { color: #FF5722; }
.team-tag.B { color: #2196F3; }