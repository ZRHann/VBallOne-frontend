.container {
  padding: 40rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 60rpx auto;
}

.form-item {
  margin-bottom: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  border: 1rpx solid #e1e5eb;
  transition: all 0.3s ease;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 90rpx;
  line-height: 65rpx;
  font-size: 34rpx;
}

.login-link {
  text-align: center;
  margin-top: 60rpx;
  color: #666;
  font-size: 28rpx;
}

.login-link navigator {
  color: #07c160;
  margin-left: 20rpx;
}